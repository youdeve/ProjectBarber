{% set route = app.request.get('_route') %}
{% extends "@Back/back-base.html.twig" %}

{% block pagestyle %}
  <link rel="stylesheet" href="{{ asset('assets/css/back/manage.css') }}">
{% endblock %}

{% block content %}
    <div class="container">
        <div class="section">
          <div class="row page-title">
            <h2>Gestion des Rendez-vous</h2>
            <hr class='white' style="margin-bottom:1rem"/>
          </div>
          <div class="row">
            <div class="col s12 m12 l12">
              <div class="card">
                 <div class="card-content black-text">
                   <span class="card-title">Card Title</span>

                 </div>
              </div>

              <div class="col l6 m6 s6 ">
                <div class="card">
                   <div class="card-content black-text">
                     <span class="card-title custom-card-title center-align">Rendez-vous Ã  venir </span>

                     {% if appointments is defined %}
                       {% for appointment in appointments %}
                            <p><i class="material-icons medium" >description</i> {{appointment.title}}</p>
                            <p><i class="material-icons medium" >access_time</i> {{appointment.startAppointement|date("d/m/Y h:i")}}</p>
                            <p><i class="material-icons medium" >person</i> Client : <strong>{{appointment.customer}}</strong> </p>
                            <hr>
                       {% endfor %}
                     {% else %}
                        <h5> Vous n'avez aucun rendez-vous<h5>
                     {% endif %}

                   </div>
                </div>
            </div>
              <div class="col l6 m6 s6 center-align">
                <div class="card">
                   <div class="card-content black-text">
                     <span class="card-title">test</span>

                   </div>
                </div>
            </div>
          </div>
        </div>
      </div>
{% endblock %}

