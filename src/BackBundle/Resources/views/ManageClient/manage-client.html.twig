{% set route = app.request.get('_route') %}
{% extends "@Front/front-base.html.twig" %}

{% block pagestyle %}

<link rel="stylesheet" href="{{ asset('assets/css/back/list.css') }}"/>

{% endblock %}

{% block content %}
<div class="container">
  <div class="section">
    <div class="row page-title">
      <h2>Gestion clients</h2>
      <hr class='white' style="margin-bottom:1rem"/>
    </div>
    <div class="row">
      <div class="col s12">
        <div class="row">
          <div class="col s12 m12 l12">
            <ul class="collapsible" data-collapsible="expandable">
              <li>
                <div class="collapsible-header active">
                  <i class="material-icons black-text">people</i>
                  <span class="black-text">Clients <strong>{{ users|length }}</strong> </span>
                  <i class="material-icons black-text">arrow_drop_down</i>
                </div>
                <div class="collapsible-body white black-text">
                  <a href="#" alt="" title="Ajouter un nouvelle utilisateur">
                    <i class="material-icons medium orange-text right">add_circle_outline</i></a>
                  {% if users %}
                  <table class="responsive-table highlight">
                    <thead>
                      <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Derni√®re connexion</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for user in users %}
                      <tr>
                        <td>
                          <a href="{{ path('back_profil_user', {'id': user.id  }) }}">
                            {{ user.username }}
                          </a>
                        </td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.lastLogin|date('d-m-Y H:i:s') }}</td>
                        <td>
                          <a href="" title="Supprimer"><i class="material-icons red-text">delete_forever</i></a>
                          <a href="" title="Supprimer"><i class="material-icons blue-text">edit</i></a>
                        </td>
                      </tr>
                      {% endfor %}
                      <tbody>
                      </table>
                      {% else %}
                      <h4>Aucun Client</h4>
                      {% endif %}
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

