{% set route = app.request.get('_route') %}
{% extends "@Front/front-base.html.twig" %}

{% block pagestyle %}

<link rel="stylesheet" href="{{ asset('assets/css/back/list.css') }}"/>

{% endblock %}

{% block content %}
<div class="container">
  <div class="section">
    <div class="row page-title">
      <h2>Gestion clients</h2>
      <hr class='white' style="margin-bottom:1rem"/>
    </div>
    <div class="row">
      <div class="col s12">
        <div class="row">
          <div class="col s12">
            <ul class="collapsible" data-collapsible="expandable">
              <li class="active">
                <div class="collapsible-header">
                  <i class="material-icons black-text">people</i>
                  <span class="black-text">Clients <strong>{{ users|length }}</strong> </span>
                  <i class="material-icons black-text">arrow_drop_down</i>
                </div>
                <div class="collapsible-body white black-text">
                  {% if users  %}
                  <table class="responsive-table highlight">
                    <thead>
                      <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Derniere connexion</th>
                        <th>action</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for user in users %}
                          <tr>
                            <td><a href="{{ path('back_profil_user', {'id': user.id  }) }}">{{ user.username }}</a></td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.lastLogin|date('d-m-Y H:i:s') }}</td>
                            <td><a href="{{ path('back_profil_user', {'id': user.id  }) }}">{{ user.username }}</a></td>
                          </tr>
                      {% endfor %}
                      <tbody>
                      </table>
                      {% else %}
                      <h4>Aucun Client</h4>
                      {% endif %}
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block pagejs %}
<script type="text/javascript">

$(document).ready(function(){
  $('.chips').chips();
});
</script>
{% endblock %}
